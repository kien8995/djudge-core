<Languages>

	<!-- Java -->
	<language
		id              = "JAVA"
		compiler-name   = "Java 1.6.0_06"
		file-extension  = ".java"
		compile-command = "javac %name%ext"
		run-command     = "java -Xmx512m -Xms64m -Xss64m -DONLINE_JUDGE -DDJUDGE -cp ./ %name"
	>
	
		<extension>.java</extension>
	</language>

	<!-- Free Pascal -->
	<language
		id              = "FPC"
		compiler-name   = "Free Pascal"
		file-extension  = ".pas"
		compile-command = "fpc -o%name.exe %name%ext"
		run-command     = "./%name.exe"
	>
	
		<extension>.pas</extension>
		<extension>.p</extension>
	</language>

	<!-- Free Pascal (Delphi mode) -->
	<language
		id              = "FPCD"
		compiler-name   = "Free Pascal"
		file-extension  = ".pas"
		compile-command = "fpc -Sd -o%name.exe %name%ext"
		run-command     = "./%name.exe"
	>
		<extension>.dpr</extension>
	</language>

	<!-- Mono C# -->
	<language
		id              = "CS"
		compiler-name   = "C Sharp"
		file-extension  = ".cs"
		compile-command = "mono-csc %name%ext"
		run-command     = "./%name.exe"
	>
		<extension>.cs</extension>
	</language>

	<!-- GNU C++ Compiler 3.4.2 -->
	<language
		id              = "GCC"
		compiler-name   = "GNU C++ Compiler 3.4.2"
		file-extension  = ".cc"
		compile-command = "g++ %name%ext -o %name.exe -O -march=pentium4m -Wall -lm -static -DONLINE_JUDGE -DDJUDGE"
		run-command     = "./%name.exe"
	>
		<extension>.c</extension>
		<extension>.cpp</extension>
		<extension>.cc</extension>
	</language>

	<!-- Perl -->
	<language
		id              = "Perl"
		compiler-name   = "Perl"
		file-extension  = ".pl"
		compile-command = "perl -c %name.pl"
		run-command     = "perl %name.pl"
	>
		<extension>.pl</extension>
	</language>

	<!-- APE -->
	<language
		id              = "APE"
		compiler-name   = "APE"
		file-extension  = ".ape"
		compile-command = "/home/alt/work/java/djudge/problems/BAPC-2009/I/check/apecc.sh %name%ext"
		run-command     = "./%name"
	>
		<extension>.ape</extension>
	</language>

	<!-- ghc -->
	<language
		id              = "GHC"
		compiler-name   = "Haskell"
		file-extension  = ".hs"
		compile-command = "ghc %name%ext -o %name.exe"
		run-command     = "./%name.exe"
	>
		<extension>.hs</extension>
	</language>

	<!-- ocaml -->
	<language
		id              = "OCAML"
		compiler-name   = "Ocaml"
		file-extension  = ".ml"
		compile-command = "ocamlc -o %name.exe %name%ext"
		run-command     = "./%name.exe"
	>
		<extension>.ml</extension>
	</language>

</Languages>
